<%= form_for snippet do |f| %>
  <div class="inputs">
    <%= f.text_field :step_num, placeholder: 'step_num', :cols => "10", :rows => "25", class: 'form-control floating-label' %>

    <%= f.text_field :name, placeholder: 'name', :cols => "10", :rows => "25", class: 'form-control floating-label' %>

    <%= f.text_field :code_term, placeholder: ':code_term', :cols => "10", :rows => "25", class: 'form-control floating-label' %>
    
    <%= f.text_field :core_language, placeholder: 'core_language', :cols => "10", :rows => "25", class: 'form-control floating-label' %>
    
    <%= f.text_field :tool, placeholder: 'tool', :cols => "10", :rows => "25", class: 'form-control floating-label' %>
    
    <%= f.text_area :description, placeholder: 'description', :cols => "10", :rows => "25", class: 'form-control floating-label' %>
    
    <%= f.text_area :snippet, placeholder: 'Snippet', :cols => "10", :rows => "25", class: 'form-control floating-label' %>
    
  </div>
  
  <%= f.submit 'Save Snippet' , class: 'btn btn-success' %>
<% end%>